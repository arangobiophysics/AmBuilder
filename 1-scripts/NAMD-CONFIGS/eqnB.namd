set sys            1
set inputName      $sys.eqnA
outputName         $sys.eqnB

structure          $sys.psf 
coordinates        $sys.pdb  

set temperature    310

# Continuing a job from the restart files
#if {0} {
if {1} {
  # checks to see if the .coor file exists (if the sim finished)
  # if not, sim continues from the restart files
if [file exists $inputName.coor] {
  bincoordinates     $inputName.coor
  binvelocities      $inputName.vel  ;# remove the "temperature" entry if you use this!
  extendedSystem     $inputName.xsc
} else {
  set restart        $inputName.restart
  bincoordinates     $restart.coor
  binvelocities      $restart.vel    ;# remove the "temperature" entry if you use this!
  extendedSystem     $restart.xsc
}
}

proc get_first_ts { xscfile } {
  set fd [open $xscfile r]
  gets $fd
  gets $fd
  gets $fd line
  set ts [lindex $line 0]
  close $fd
  return $ts
}

set firsttime [get_first_ts $inputName.restart.xsc]
set firsttime      0
